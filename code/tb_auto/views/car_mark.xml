<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.actions.act_window" id="car_mark_list_action">
        <field name="name">Car Mark</field>
        <field name="res_model">car.mark</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_similing_face">Add Mark
            </p>
        </field>
    </record>

    <!-- model.name tree view -->
    <record id="car_mark_view_tree" model="ir.ui.view">
        <field name="name">mark.car.view.tree</field>
        <field name="model">car.mark</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" class="text-uppercase"/>
            </tree>
        </field>
    </record>

    <!-- model.name form view -->
    <record id="car_mark_view_form" model="ir.ui.view">
        <field name="name">mark.car.view.form</field>
        <field name="model">car.mark</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" class="text-uppercase" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>