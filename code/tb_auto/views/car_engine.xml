<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.actions.act_window" id="car_engine_list_action">
        <field name="name">Car Engine</field>
        <field name="res_model">car.engine</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_similing_face">Add engine
            </p>
        </field>
    </record>

    <!-- tree -->
    <record id="car_engine_view_tree" model="ir.ui.view">
        <field name="name">car.engine.view.tree</field>
        <field name="model">car.engine</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" class="text-uppercase" />
                <field name="cylindre" class="text-uppercase" />
                <field name="type" class="text-uppercase" />
                <field name="energie" class="text-uppercase" />
                <field name="valves" class="text-uppercase" />
                <field name="powerful" class="text-uppercase" />
            </tree>
        </field>
    </record>

    <!-- form -->
    <record id="car_engine_view_form" model="ir.ui.view">
        <field name="name">car.engine.view.form</field>
        <field name="model">car.engine</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" class="text-uppercase" />
                        <field name="cylindre" class="text-uppercase" />
                        <field name="type" class="text-uppercase" />
                        <field name="energie" class="text-uppercase" />
                        <field name="valves" class="text-uppercase" />
                        <field name="powerful" class="text-uppercase" />
                        <field name="model_ids" class="text-uppercase" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>