<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.actions.act_window" id="product_mark_list_action">
        <field name="name">Mark</field>
        <field name="res_model">mark.auto</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_similing_face">Add Mark
            </p>
        </field>
    </record>

    <!-- model.name tree view -->
    <record id="mark_view_tree" model="ir.ui.view">
        <field name="name">pieces_auto.mark.view.tree</field>
        <field name="model">mark.auto</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>

    <!-- model.name form view -->
    <record id="mark_view_form" model="ir.ui.view">
        <field name="name">Mark</field>
        <field name="model">mark.auto</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>