<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.ui.view" id="artec_product_template_form_inherit">
        <field name="name">Artec Product Template Form Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="before">
                <field name="mark_id" />
            </xpath>
            <xpath expr="//field[@name='name']" position="replace">
                <field name="name" />
            </xpath>
            <xpath expr="//field[@name='default_code']" position="replace">
                <field name="old_reference"/>
            </xpath>

            <xpath expr="//div[@class='oe_title']" position="after">
                <div class="oe_title">
                    <label for="default_code" string="Reference"/>
                    <h1>
                        <div class="d-flex">
                            <field name="default_code" required="1"/>
                        </div>
                    </h1>
                </div>
            </xpath>

            <xpath expr="//field[@name='priority']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Compatible Cars" name="compatible_cars">
                    <field  name="comp_ids" 
                            string="Compatible Vehicles"
                            widget="section_and_note_one2many"
                            mode="tree"
                    >
                        <tree 
                            string="Compatible Vehicles"
                            editable="bottom"
                        >
                            <control>
                                <create name="add_car_control" string="Add Car"/>
                            </control>
                            <field name="model_id"/>
                            <field name="engine_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>