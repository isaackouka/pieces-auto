<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.ui.view" id="artec_product_template_form_inherit">
        <field name="name">Artec Product Template Form Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="before">
                <field name="mark_id" />
            </xpath>
            <xpath expr="//field[@name='name']" position="replace">
                <field name="name" />
            </xpath>
            <xpath expr="//field[@name='default_code']" position="replace"></xpath>
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="default_code" string="RÃ©ference TBA"/>
                <field name="reference_oe"/>
                <field name="short_reference"/>
            </xpath>

            <xpath expr="//div[@class='oe_title']" position="after">
                <div class="oe_title">
                    <label for="designation" string="Designation"/>
                    <h1>
                        <div class="d-flex">
                            <field name="designation"/>
                        </div>
                    </h1>
                </div>
            </xpath>

            <xpath expr="//field[@name='priority']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='product_tooltip']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Compatible Cars" name="compatible_cars">
                    <field  name="comp_ids" 
                            widget="one2many"
                    >
                        <tree
                            editable="bottom"
                        >
                            <control>
                                <create name="add_car_control" string="Add Car"/>
                            </control>
                            <field name="model_id"/>
                            <field name="engine_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="artec_product_template_tree_inherit">
        <field name="name">Artec Product Template Tree Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='responsible_id']" position="replace">
                <field name="mark_id"/>
            </xpath>
            <!-- <tree position="attributes">
                <attribute name="decoration-danger">qty_available &lt;= 0</attribute>
            </tree> -->
            <xpath expr="//field[@name='priority']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                 <field name="default_code"/>
            </xpath>

        </field>
    </record>

    <record id="stock.product_template_action_product" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form</field>
    </record>

</odoo>