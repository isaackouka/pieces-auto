<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.ui.view" id="artec_product_template_form_inherit">
        <field name="name">Artec Product Template Form Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="replace">
                <div class="oe_title">
                    <label for="name" string="Product name" />
                    <h2>
                        <div class="d-flex">
                            <field name="name" />
                        </div>
                    </h2>
                    <div class="d-flex">
                        <span class="d-inline-block">
                            <field name="has_multi_name" />
                            <label for="has_multi_name" />
                        </span>
                    </div>
                    <div class="d-flex">
                        <span attrs="{'invisible':[('has_multi_name', '=', False)]}">
                            <label for="name_ids" />
                            <field name="name_ids" widget="many2many_tags" />
                        </span>
                    </div>
                </div>
                <div class="oe_title">
                    <label for="designation" string="Designation" />
                    <h2>
                        <div class="d-flex">
                            <field name="designation" />
                        </div>
                    </h2>
                </div>
            </xpath>

            <xpath expr="//page[@name='general_information']" position="before">
                <page string="References" name="reference">
                    <group name="reference" string="Reference">
                        <field name="default_code" string="RÃ©ference TBA" readonly="1"/>
                        <field name="reference_oe" widget="many2many_tags"/>
                        <field name="short_reference"/>
                        <field name="seller_ids" string="Vendors reference">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="product_code"/>
                                <field name="company_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </page>
                <page string="Constructors" name="constructors">
                    <group>
                        <field name="constructor_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </page>
                <page string="Cars and Position" name="compatible_cars">
                    <group>
                        <field name="front_ids" widget="many2many_tags"/>
                        <field name="side_ids" widget="many2many_tags"/>
                        <field name="position_ids" widget="many2many_tags"/>
                        <field name="specification" />
                    </group>

                    <label for="comp_ids" string="Compatible cars"/>
                    <field name="comp_ids" widget="one2many">
                        <tree editable="bottom">
                            <control>
                                <create name="add_car_control" string="Add Car" />
                            </control>
                            <field name="model_id" />
                            <field name="year_start" string="From" />
                            <field name="year_end" string="To" />
                            <field name="engine_ids" />
                            <field name="energie" />
                            <field name="gearbox_ids" />
                        </tree>
                    </field>
                </page>
                <page string="Attributes" name="attributes">
                    <group>
                        <field name="mark_id"/>
                        <field name="product_family"/>
                        <field name="category_ids" widget="many2many_tags"/>
                    </group>
                    <field name="customs_ids">
                        <tree editable="bottom">
                            <field name="hs_code" />
                            <field name="hs_designation" />
                            <field name="manifacturing_country" />
                            <field name="origin_country" />
                            <field name="price_preferential" />
                            <field name="custom_taxe" />
                            <field name="tva" />
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//page[@name='purchase']" position="replace"></xpath>

            <xpath expr="//page[@name='general_information']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//page[@name='inventory']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//page[@name='invoicing']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            
        </field>
    </record>
    <record model="ir.ui.view" id="artec_product_template_tree_inherit">
        <field name="name">Artec Product Template Tree Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='responsible_id']" position="replace">
                <field name="mark_id" />
            </xpath>
            <!-- <tree position="attributes">
                <attribute name="decoration-danger">qty_available &lt;= 0</attribute>
            </tree> -->

            <xpath expr="//field[@name='priority']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="default_code" />
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="reference_oe" widget="many2many_tags" />
            </xpath>

        </field>
    </record>

    <record id="stock.product_template_action_product" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form</field>
    </record>


    <record id="product_supplierinfo_tree_view" model="ir.ui.view">
        <field name="name">product.supplierinfo.view.tree</field>
        <field name="model">product.supplierinfo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_code"/>
            </tree>
        </field>
    </record>

</odoo>